{% extends 'admin1/base.html.twig' %}

{% block title %}CoursDevises index
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/dataTables.bootstrap5.min.css">
	<link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.0.1/css/buttons.bootstrap5.min.css">
{% endblock %}
{% block body %}

	<section id="features" class="features">

		<div class="col-xs-12">
			<h3 class="header smaller lighter blue">Liste des cours
			</h3>
			<div class="table-responsive">
				<table id="my-table" class="table table-striped table-bordered table-hover">
					<a href="{{ path('app_coursdevises_new') }}" class="bleu">
						<i class="ace-icon fa fa-search-plus bigger-130"></i>
					</a>

					<div class="table-header">
						Résultats pour "Derniers enregistrés"
					</div>
					<thead>
						<tr>
							<th>Devises</th>
							<th>Code devise</th>
							<th>Achat</th>
							<th>Vente</th>
                            <th>Marge</th>
                         
							<th>Crée le:</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for coursdevise in coursdevises %}
							<tr>
								<td>
									<img src="/images/{{ coursdevise.devises.image }}" alt="" width="40" heigth="40"/>
								</td>
								<td>{{ coursdevise.devises.code }}</td>
								<td>
									<div class="editable-field" data-id="{{ coursdevise.id }}" data-field="valeurachat" contenteditable="true">
										{{ coursdevise.valeurachat }}
									</div>
								</td>
								<td>
									<div class="editable-field" data-id="{{ coursdevise.id }}" data-field="valeurvente" contenteditable="true">
										{{ coursdevise.valeurvente }}
									</div>
								</td>
								<td>
									{{ coursdevise.getMarge()}}
								</td>


								<td>{{ coursdevise.createdat|date('Y-m-d H:i:s') }}</td>
							<td class="small-td">
    <div class="hidden-sm hidden-xs action-buttons">
        <select onchange="if (this.value) window.location.href=this.value" class="form-control input-sm">
            <option value="" selected>Actions</option>
            <option value="{{ path('app_coursdevises_delete', {'id': coursdevise.id}) }}">
                <i class="ace-icon fa fa-trash-o bigger-130"></i> Supprimer
            </option>
            <option value="{{ path('app_coursdevises_edit', {'id': coursdevise.id}) }}">
                <i class="ace-icon fa fa-pencil bigger-130"></i> Modifier
            </option>
        </select>
    </div>
</td>

							</tr>
						{% else %}
							<tr>
								<td colspan="4">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	{% endblock %}

	{% block javascripts %}
	

	 <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
	<script src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap5.min.js"></script>
	<script src="https://cdn.datatables.net/buttons/2.0.1/js/dataTables.buttons.min.js"></script>
	<script src="https://cdn.datatables.net/buttons/2.0.1/js/buttons.bootstrap5.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.5/jszip.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.66/pdfmake.min.js"></script>
	<script src="https://cdn.datatables.net/buttons/2.0.1/js/buttons.html5.min.js"></script>
	<script src="https://cdn.datatables.net/buttons/2.0.1/js/buttons.print.min.js"></script>
	
	{% endblock %}
