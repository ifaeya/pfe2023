{% extends 'admin1/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <style>
        /* Ajoutez votre CSS personnalisé ici */
        .custom-body {
            max-width: 500px;
            margin: 0 auto;
            padding: 20px;
        }

        .image-container {
            position: relative;
            display: inline-block;
        }

        .img-thumbnail {
            width: 100px;
            height: 100px;
        }

        .middle {
            transition: .5s ease;
            opacity: 0;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
            text-align: center;
        }

        .image-container:hover .middle {
            opacity: 1;
        }

        /* Ajoutez plus de styles personnalisés ici */

    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
{% endblock %}

{% block body %}
    <div class="container custom-body">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title mb-4">
                            <div class="d-flex justify-content-start">
                                <div class="image-container">
                                    <img src="{{ asset('images/profile_placeholder.jpg') }}" id="imgProfile" class="img-thumbnail"/>
                                    <div class="middle">
                                        <input type="button" class="btn btn-secondary" id="btnChangePicture" value="Change"/>
                                        <input type="file" style="display: none;" id="profilePicture" name="file"/>
                                    </div>
                                </div>
                                <div class="userData ml-3">
                                    <h2 class="d-block" style="font-size: 1rem; font-weight: bold">
                                        <a href="javascript:void(0);">{{ app.user.Nom }} {{ app.user.Prenom }}</a>
                                    </h2>
                                </div>
                            </div>
                        </div>

                        <div class="row">
    <div class="col-12">
        <ul class="nav nav-tabs mb-2" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="basicInfo-tab" data-toggle="tab" href="#basicInfo" role="tab" aria-controls="basicInfo" aria-selected="true">Informations de base</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="connectedServices-tab" data-toggle="tab" href="#connectedServices" role="tab" aria-controls="connectedServices" aria-selected="false">Services connectés</a>
            </li>
        </ul>
        <div class="tab-content ml-1" id="myTabContent">
            <div class="tab-pane fade show active" id="basicInfo" role="tabpanel" aria-labelledby="basicInfo-tab">
                <div class="row">
                    <div class="col-sm-5 col-5">
                        <label style="font-weight:bold;">Nom</label>
                    </div>
                    <div class="col-sm-7 col-7">
                        {{ app.user.Nom }}
                    </div>
                </div>
                <hr/>
                <div class="row">
                    <div class="col-sm-5 col-5">
                        <label style="font-weight:bold;">Prénom</label>
                    </div>
                    <div class="col-sm-7 col-7">
                        {{ app.user.Prenom }}
                    </div>
                </div>
                <hr/>
                <div class="row">
                    <div class="col-sm-5 col-5">
                        <label style="font-weight:bold;">Email</label>
                    </div>
                    <div class="col-sm-7 col-7">
                        {{ app.user.email }}
                    </div>
                </div>
                <hr/>
                <div class="row">
                    <div class="col-sm-5 col-5">
                        <label style="font-weight:bold;">Vérifié</label>
                    </div>
                    <div class="col-sm-7 col-7">
                        {{ app.user.isVerified }}
                    </div>
                </div>
                <hr/>
                <a href="{{ path('app_editprofil_index', {'nom': 'valeur_du_nom'}) }}" class="btn btn-primary">Modifier le profil</a>

                <a href="/reset-password/" class="btn btn-primary">Modifier le mot de passe</a>
            </div>
            <div class="tab-pane fade" id="connectedServices" role="tabpanel" aria-labelledby="connectedServices-tab">
                Comptes Facebook, Google, Twitter connectés à ce compte
            </div>
        </div>
    </div>
</div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // JavaScript pour déclencher la boîte de dialogue de sélection de fichier lorsque le bouton "Change" est cliqué
        document.getElementById("btnChangePicture").addEventListener("click", function () {
            document.getElementById("profilePicture").click();
        });
    </script>
{% endblock %}
