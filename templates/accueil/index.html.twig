    <script>
    document.addEventListener('DOMContentLoaded', function() {
    const typeOperationSelect = document.getElementById('typeoperation');
    const selectCurrencyContainer = document.getElementById('select-currency-container');
    const selectCurrency = document.getElementById('code');
    const selectCurrency2 = document.getElementById('code2');
    const montantInput = document.getElementById('montant');
    const convertedAmountDiv = document.getElementById('converted-amount');

    // Function to set the default placeholder and disable the select element
    function setDefaultAndDisable(selectElement) {
      selectElement.value = '';
      selectElement.disabled = true;
      const defaultOption = document.createElement('option');
      defaultOption.text = 'Dinar Tunisien';
      defaultOption.value = '';
      defaultOption.disabled = true;
      defaultOption.selected = true;
      selectElement.appendChild(defaultOption);
    }

    // Initial state
    setDefaultAndDisable(selectCurrency);
    setDefaultAndDisable(selectCurrency2);

    // Event listener for typeoperation select
    typeOperationSelect.addEventListener('change', function(event) {
      const selectedValue = event.target.value;

      if (selectedValue === 'Vente') {
        selectCurrency.disabled = false;
        selectCurrency2.disabled = true;
        selectCurrencyContainer.style.display = 'block';
      } else if (selectedValue === 'Achat') {
        selectCurrency2.disabled = false;
        selectCurrency.disabled = true;
        selectCurrencyContainer.style.display = 'block';
      }
    });

    // Function to perform currency conversion asynchronously
    function convertCurrency() {
      const form = new FormData();
      form.append('code', typeOperationSelect.value === 'Vente' ? selectCurrency.value : selectCurrency2.value);
      form.append('montant', montantInput.value);
      form.append('typeoperation', typeOperationSelect.value);

      fetch('/convert_currency', {
        method: 'POST',
        body: form
      })
      .then(response => response.json())
      .then(data => {
        if (data.convertedAmount) {
          convertedAmountDiv.textContent = `Montant en ${data.currencyCode}: ${data.convertedAmount}`;
        } else {
          convertedAmountDiv.textContent = '';
        }
      })
      .catch(error => {
        console.error('Error:', error);
      });
    }

    // Event listener for form submission
    const form = document.querySelector('form');
    form.addEventListener('submit', function(event) {
      event.preventDefault();
      convertCurrency();
    });

    // Trigger change event on page load to set the initial state correctly
    const event = new Event('change');
    typeOperationSelect.dispatchEvent(event);
  });
</script>
